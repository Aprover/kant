{
    "name": "kant",
    "description": "The monorepo containing all the kant-related packages",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "generate": "pnpm run -r generate",
        "lint": "pnpm run -r lint",
        "lint:fix": "pnpm run -r lint:fix",
        "format": "prettier -w .",
        "format:fix": "pnpm run format && pnpm run lint:fix",
        "build": "pnpm run -r build",
        "test": "jest --coverage --silent --passWithNoTests",
        "test:open": "opener ./coverage/lcov-report/index.html",
        "package:extension": "pnpm run -r package:extension",
        "cli": "ts-node --project packages/cli/tsconfig.json packages/cli/cli.ts",
        "predocs": "pnpm run clean:docs",
        "docs": "globstar --nodir -- md-to-pdf \"*.md\" \"docs/**/*.md\" --config-file docs.config.js",
        "postdocs": "copyfiles \"**/*.pdf\" docs/out/ && del-cli \"**/*.pdf\" \"!docs/out/**\"",
        "check": "pnpm run clean && node check-monorepo.js && pnpm run format:fix && pnpm run build && pnpm run test && pnpm run check:examples",
        "check:examples": "findx \"examples/**/*.kant\" -C 1 -- pnpm run cli check {{path}}",
        "clean": "del-cli .jest coverage && pnpm run -r clean && pnpm run clean:docs",
        "clean:docs": "del-cli docs/output",
        "clean:generated": "pnpm run -r clean:generated",
        "test:validation": "npm run generate && npm run build && npm run package:extension && tsc packages/core/src/validation/test/test-launcher.ts && node packages/core/src/validation/test/test-launcher.js"
    },
    "devDependencies": {
        "@relmify/jest-fp-ts": "2.0.2",
        "@types/node": "16.18.10",
        "@types/jest": "29.2.4",
        "@typescript-eslint/eslint-plugin": "5.46.1",
        "@typescript-eslint/parser": "5.46.1",
        "@vscode/vsce": "2.15.0",
        "copyfiles": "2.4.1",
        "del-cli": "5.0.0",
        "esbuild": "0.16.9",
        "eslint": "8.30.0",
        "eslint-import-resolver-typescript": "3.5.2",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-fp-ts": "0.3.2",
        "eslint-plugin-functional": "4.4.1",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-import-access": "1.0.1",
        "eslint-plugin-jest": "27.1.7",
        "eslint-plugin-typescript-enum": "2.1.0",
        "fp-ts": "2.13.1",
        "globstar": "1.0.0",
        "findx-cli": "0.2.2",
        "io-ts": "2.2.20",
        "jest": "29.3.1",
        "langium-cli": "1.0.0",
        "md-to-pdf": "5.2.1",
        "prettier": "2.8.0",
        "prettier-eslint": "15.0.1",
        "prettier-plugin-organize-imports": "3.2.1",
        "ts-jest": "29.0.3",
        "ts-node": "10.9.1",
        "typescript": "4.9.4",
        "yaml": "2.2.0"
    }
}
