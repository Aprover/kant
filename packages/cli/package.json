{
    "name": "kant-cli",
    "version": "0.1.0",
    "files": [
        "/index.d.ts",
        "/index.js",
        "/cli.d.ts",
        "/cli.js",
        "/src/**/*.d.ts",
        "/src/**/*.js",
        "!/**/*.test.d.ts",
        "!/**/*.test.js"
    ],
    "bin": {
        "kant": "./cli.js"
    },
    "scripts": {
        "lint": "eslint . --ext .ts --max-warnings=0 --ignore-path ../../.eslintignore",
        "lint:fix": "pnpm run lint --fix",
        "format": "prettier -w . --ignore-path ../../.prettierignore",
        "format:fix": "pnpm run format && pnpm run lint:fix",
        "build": "tsc",
        "clean": "del-cli out"
    },
    "dependencies": {
        "chalk": "4.1.2",
        "chevrotain": "10.4.2",
        "commander": "9.4.1",
        "kant-core": "workspace:*",
        "langium": "1.0.1",
        "vscode-languageserver": "8.0.2",
        "vscode-uri": "3.0.7"
    }
}
